<h1 class="text-center"><u>Category</u></h1>
<br>

<center>
<div class="digg_pagination">

    <%= will_paginate @categories, :container => false %>
  </div>



<table>
<div class="container">
  <% @categories.each do |category| %>

 <tr>
    <td>  <h5><%= link_to category.name,category %></h5></td>
      <td> <%= pluralize(category.articles.count,"article") %>
    <td> <small>Joined <%= time_ago_in_words(category.created_at) %></small></td>
    <td> <small>Updated <%= time_ago_in_words(category.updated_at) %></small></td>

 </tr>
  <%end%>
  </div>
 </table></center>
